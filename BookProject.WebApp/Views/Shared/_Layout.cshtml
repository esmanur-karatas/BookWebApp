<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookProject.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookProject.WebApp.styles.css" asp-append-version="true" />
    <link href="c:\users\dell\desktop\c#\bookproject\bookproject.webapp\views\shared\_layout.cshtml.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white text" asp-area="" asp-controller="Books" asp-action="Index">KİTAPLAR</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white text" asp-area="" asp-controller="Books" asp-action="Add">KİTAP EKLE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white text" asp-area="" asp-controller="Books" asp-action="Update">KİTAP GÜNCELLE</a>
                        </li>
                        <form class="d-flex" role="search" style=" float: left; margin-left: 465px;">
                            
                            @using (Html.BeginForm())
                            {
                               @*  <div style=" float: left; margin-left: 465px;"> *@
                                @Html.TextBox("Search", null, new {@class="form-control me-2", @placeholder="Ara"});
                              
                                <button class="btn btn-outline-success" type="submit">Ara</button>
                            }
                        </form>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
